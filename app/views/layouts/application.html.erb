<!DOCTYPE html>
<html>
  <head>
    <title>RobinShould</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.coolBalloon = "<%= image_url('coolBalloon.png') %>";
      window.login = "<%= image_url('login.png') %>";
      window.logo = "<%= image_url('logo.png') %>";
      window.postgres = "<%= image_url('postgresql.png') %>";
      window.rails = "<%= image_url('rails.png') %>";
      window.redux = "<%= image_url('redux.png') %>";
      window.react = "<%= image_url('react.png') %>";
      window.ruby = "<%= image_url('ruby.png') %>";
      window.phone = "<%= image_url('splashPhone.png') %>";
      window.tree = "<%= image_url('tree.png') %>";
      window.IEXAPIKey = "<%= Rails.application.credentials.iex_cloud[:api_token]%>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
